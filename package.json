{
  "name": "project-template-next-ts",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "test": "jest --coverage ",
    "build": "next build",
    "start": "next start"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>jest.setup.tsx",
    "collectCoverageFrom": [
      "{pages,components}/*.{ts,tsx}",
      "!**/_document.tsx"
    ]
  },
  "dependencies": {
    "next": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^3.0.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.1.3",
    "@types/next": "^2.4.8",
    "@types/react": "^16.0.38",
    "@zeit/next-typescript": "^0.0.10",
    "babel-plugin-styled-components": "^1.4.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.3.0",
    "jest-styled-components": "^4.9.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.8.0",
    "typescript": "^2.7.2"
  }
}
