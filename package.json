{
  "name": "project-template-next-ts",
  "license": "MIT",
  "scripts": {
    "prebuild": "tsc",
    "dev": "concurrently \"tsc --pretty --watch\" \"next\"",
    "test": "jest --coverage ",
    "build": "next build",
    "start": "next start"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>jest.setup.tsx",
    "collectCoverageFrom": [
      "{pages,components}/*.{ts,tsx}",
      "!**/_document.tsx"
    ]
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.4.0",
    "next": "^4.4.0-canary.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^3.0.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^22.0.0",
    "@types/next": "^2.4.5",
    "@types/react": "^16.0.22",
    "concurrently": "^3.5.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.0.4",
    "jest-styled-components": "^4.9.0",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
